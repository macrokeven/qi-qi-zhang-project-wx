/**app.wxss**/
page {
    background: #F5F9FD;
    font-family: PingFang-SC-Regular;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}

.l-container {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: #F5F9FD;
}

.l-row {
    display: flex;
    flex-direction: row;
    width: 100%;
}

.l-center {
    justify-content: center;
    align-items: center;
}

.l-col {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.tab-box {
    width: 100%;
    height: 180rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}

.l-bottom-box {
    width: 100%;
    height: 20rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}