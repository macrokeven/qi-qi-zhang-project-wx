.avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-left: 48rpx;
}

.default-avatar-box {
    width: 148rpx;
    height: 148rpx;
    border-radius: 50%;
    margin-left: 48rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 2rpx solid #b4b4b4;
}
.default-avatar{
    width: 148rpx;
    height: 148rpx;
    border-radius: 50%;
    margin-left: 48rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /*border: 2rpx solid #b4b4b4;*/
}
.username {
    color: rgb(31, 34, 38);
    font-size: 36rpx;
    font-weight: 700;
    letter-spacing: 0;
}

.tips {
    color: rgba(31, 34, 38, 0.5);
    font-size: 24rpx;
    font-weight: 700;
    line-height: 32rpx;
    letter-spacing: 0;
    text-align: left;
    margin: 8rpx 16rpx 0 16rpx;
}

.user-profile-card {
    width: 95%;
    height: 200rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    /*box-shadow: 0 2px 8px 0 rgba(68, 73, 77, 0.16);*/
    display: flex;
    align-items: center;
    margin: 50rpx 0;
}

.profile-button {
    width: 95%;
    height: 100rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    margin: 10rpx 0;
}

.button-icon {
    width: 50rpx;
    height: 50rpx;
    margin-left: 30rpx;
}

.button-text {
    margin-left: 30rpx;
    /*letter-spacing: 10rpx;*/
}

.vip-icon {
    height: 40rpx;
    width: 40rpx;
}

.vip-level {
    color: #2969FF;
    margin-left: 10rpx;
    font-weight: 600;
}

.my-btn {
    width: 100%;
    height: 110rpx;
    text-align: center;
    line-height: 110rpx;
    border-bottom: 2rpx solid #c9c9c9;
    color: red;
    background: #ffffff;
}

.safe-box {
    width: 100%;
    height: constant(safe-area-inset-bottom);
    height: env(safe-area-inset-bottom);
    background: #ffffff;
}
.button-arrow{
    height: 40rpx;
    width: 40rpx;
    margin: 0 30rpx 0 auto;
}
