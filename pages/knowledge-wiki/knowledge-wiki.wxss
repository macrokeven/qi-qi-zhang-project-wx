/* pages/knowledge-wiki.wxss */
.l-card {
    background: white;
    border-radius: 20rpx;
    margin: 20rpx;
}

.l-row {
    flex-direction: column;
}

.space {
    flex: 1;
}

.list-item {
    position: relative;
    background-color: white;
}

.list-item:not(:first-child)::after {
    content: '';
    position: absolute;
    left: 20rpx;
    right: 20rpx;
    top: -0.5rpx;
    height: 1rpx;
    background-color: rgba(0,0,0, 0.1);
}

.item-title {
    flex: 1;
    padding: 40rpx 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.item-tritip {
    margin-right: 20rpx;
    display: block;
    width: 0;
    height: 0;
    border-left: 0.3em solid transparent;
    border-right: 0.3em solid transparent;
    border-top: 0.3em solid black;
    transform: rotate(0deg);
    transition: transform 0.2s linear;
}

.item-content {

}
.item-content-text {
    display: block;
    padding: 40rpx;
    padding-top: 0;
}

.item-opened .item-title {
    font-weight: 600;
}
.item-opened .item-tritip {
    transform: rotate(180deg);
}
.item-opened .item-content {
    
}
