/* pages/home/home.wxss */
.search-icon {
    position: absolute;
    margin-left: 60rpx;
    width: 60rpx;
    height: 60rpx;
}


.search-box {
    margin-left: 40rpx;
    border-radius: 18rpx;
    /*width: calc(85% - 218rpx);*/
    width: calc(100% - 208rpx);
    border: 2rpx solid #ffffff;
    background: #ffffff;
    height: 108rpx;
    font-size: 30rpx;
    padding: 0 0 0 100rpx;
    font-family: "Microsoft YaHei UI";
    font-weight: 500;
    line-height: 22px;
    letter-spacing: 0;
    text-align: left;
}

.alert {
    margin: 0 30rpx 0 30rpx;
    width: 108rpx;
    height: 108rpx;
}

.title-label {
    margin: 0 0 0 40rpx;
    color: rgb(31, 34, 38);
    font-family: Barlow;
    display: flex;
    align-items: center;
    font-size: 36rpx;
    font-weight: 700;
    line-height: 52rpx;
    letter-spacing: 0;
    padding: 0;
}

.l-btn {
    width: 120rpx;
    height: 52rpx;
    background: rgb(41, 105, 255);
    border-radius: 12rpx;
    color: white;
    text-align: center;
    line-height: 52rpx;
    margin: 0 20rpx 0 auto;
}

.scroll-h {
    margin-top: 40rpx;
    display: flex;
    overflow-y: scroll;
    max-width: 100vw;
    min-width: 100vw;
}

.card {
    margin: 0 20rpx;
    width: 95vw;
    height: 250rpx;
    border-radius: 16rpx;
    position: relative;
}
.card:first-child{
    margin-left: 0;
}
.card-logo {
    position: absolute;
    width: 96rpx;
    height: 96rpx;
    border-radius: 8px;
    margin: 32rpx;
}

.tax-name {
    color: rgb(255, 255, 255);
    font-size: 32rpx;
    font-weight: 500;
    letter-spacing: 0;
    text-align: left;
    margin: 4rpx 0;
    width: fit-content;
}

.card-s-logo {
    width: 36rpx;
    height: 36rpx;
    margin-left: 32rpx;
}

.tax-date {
    color: rgba(255, 255, 255, 0.5);
    font-size: 24rpx;
    font-weight: 500;
    letter-spacing: 0;
    text-align: left;
    margin: 4rpx 0;
    width: fit-content;

}

.tax-status-box {
    margin: 0 40rpx 0 auto;
    width: fit-content;
    display: flex;
    align-items: center;
}

.card-like {
    margin: 32rpx 32rpx 0 508rpx;
    position: absolute;
    width: 52rpx;
    height: 52rpx;
    border-radius: 9rpx;
}

.card-n {
    width: 90%;
    height: 130rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    display: flex;
    flex-direction: row;
    margin: 5rpx 0;
}

.card-n:last-child {
    margin-bottom: 40rpx;
}

.card-n-logo {
    width: 96rpx;
    height: 96rpx;
    border-radius: 8px;
    margin: 27rpx 0 27rpx 27rpx;
}

.b-blue {
    background: rgb(41, 105, 255);
}

.t-blue {
    color: rgb(41, 105, 255);
}

.b-black {
    background: #1F2226;
}

.b-red {
    background: #EB4335;
}

.b-purple {
    background: #5F29FF;
}

.t-black {
    color: #1F2226;
}

.t-grey {
    color: rgba(31, 34, 38, 0.5);
}

.card-container {
    margin-top: 30rpx;
    border-radius: 18rpx;
    width: 95%;
    display: flex;
    flex-direction: column;
    background: #ffffff;
}

.loading-panel {
    width: 250rpx;
    height: 250rpx;
    border-radius: 16rpx;
    background: #FFF;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: fixed;
    top: calc(50% - 200rpx);
    left: calc(50% - 125rpx);
}

.loading-text {
    margin-top: 30rpx;
    font-size: 30rpx;
}
.no-data-box{
    position: fixed;
    top: calc(50% - 400rpx);
    width: 100%;
    display: flex;
    flex-direction: column;
}
.no-data-img {
    height: 300rpx;
    width: calc(300rpx / 553 * 805);
}
.no-data-text{
    margin-top: 40rpx;
    color: #3d3d3d;
    font-size: 40rpx;
}