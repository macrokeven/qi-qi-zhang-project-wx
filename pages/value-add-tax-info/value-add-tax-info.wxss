/* pages/value-add-tax-info/value-add-tax-info.wxss */
.l-card{
    width: 95%;
    margin-left: 2.5%;
    border-radius: 20rpx;
    background: #ffffff;
    margin-top: 40rpx;
    display: flex;
    flex-direction: column;
}
.tax-row{

}
.tax-name{
    min-height: 96rpx;
    line-height: 96rpx;
    font-size: 25rpx;
    margin-left: 32rpx;
    word-break: break-all;
}
.tax-rate{
    display: flex;
    align-items: center;
    min-height: 96rpx;
    line-height: 96rpx;
    font-size: 25rpx;
    margin: 0 20rpx 0 auto;
}
.grey-line{
    width: 100%;
    border-bottom: 1rpx solid #efefef;
}
.loading-panel {
    width: 100%;
    height: 80vh;
    border-radius: 16rpx;
    background: #FFF;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.loading-text {
    margin-top: 30rpx;
    font-size: 30rpx;
}